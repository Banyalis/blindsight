            <div class="MemoriesPopup-nextCardImage">
                <img src="{{ block.cardImage }}" alt="">
            </div>
            <div class="MemoriesPopup-nextCardInner">
                <div class="MemoriesPopup-nextCardCaption">Memory:{{ block.cardCaption }}</div>
                <div class="MemoriesPopup-nextCardFooter">
                    <div class="MemoriesPopup-nextCardHint">Next â†’</div>
                    <div class="MemoriesPopup-nextCardTitle">{{ block.cardTitle }}</div>
                </div>
