{% import "front/utils/macros.jinja" as macros %}

{% macro Header(data={}) %}
    <header class="Header">
        <div class="Header-openMenu">Menu</div>
        <div class="Header-menuWrapper">
            <div class="Header-closeMenu">
                {% call macros.svgSprite("i-close") %}{% endcall %}
            </div>
            <nav class="Header-menu">
                <a href="{{ url('front:index') }}" data-id="index" class="Header-menuItem u-Route">
                    Blindsight
                    <span class="Header-menuItemSeparator"></span>
                </a>
                <a href="{{ url('front:memories') }}" data-id="memories" class="Header-menuItem u-Route">
                    Memories
                    <span class="Header-menuItemSeparator"></span>
                </a>
                <a href="{{ url('front:about') }}" data-id="about" class="Header-menuItem u-Route">
                    About
                    <span class="Header-menuItemSeparator"></span>
                </a>
            </nav>
            <div class="Header-menuButtonWrapper">
                <a href="" class="Header-menuButton">Watch Film</a>
            </div>
        </div>
    </header>
{% endmacro %}