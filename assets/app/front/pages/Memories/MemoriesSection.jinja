{% extends 'front/pages/Section/Section.jinja' %}
{% import 'front/utils/macros.jinja' as macros %}

{% from 'front/components/MemoriesNav/MemoriesNav.jinja' import MemoriesNav %}
{% from 'front/components/MemoriesSlider/MemoriesSlider.jinja' import MemoriesSlider %}
{% from 'front/components/MemoriesSwitch/MemoriesSwitch.jinja' import MemoriesSwitch %}
{% from 'front/components/CommonVideoBackground/CommonVideoBackground.jinja' import CommonVideoBackground %}
{% from 'front/components/CommonVideoPopup/CommonVideoPopup.jinja' import CommonVideoPopup %}

{% block title %} Memories {% endblock %}

{% block social %}
    <meta name="description" content=""/>
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="{{ static('img/share/share-default.jpg') }}"/>
    <meta property="og:image:width" content="1440"/>
    <meta property="og:image:height" content="640"/>
    <meta property="og:url" content="{{ request.build_absolute_uri() }}">
    <meta property="og:title" content=""/>
    <meta property="og:description" content=""/>
{% endblock %}

{% block content_class %}MemoriesPage{% endblock %}

{% block content %}
    <div class="MemoriesSection PageSection">
        <div class="MemoriesSection-wrapper NeedFixOnPopup">
            {{ MemoriesNav(memories) }}
            {{ MemoriesSlider(memories) }}
            {{ MemoriesSwitch() }}
            {{ CommonVideoBackground(memories) }}
            {{ CommonVideoPopup() }}
        </div>
        <div class="Section-content">
            {% block section_content %}{% endblock %}
        </div>
    </div>
{% endblock %}