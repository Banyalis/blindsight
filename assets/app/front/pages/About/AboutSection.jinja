{% extends 'front/pages/Section/Section.jinja' %}
{% import 'front/utils/macros.jinja' as macros %}

{% from 'front/components/AboutIntro/AboutIntro.jinja' import AboutIntro %}
{% from 'front/components/AboutCredits/AboutCredits.jinja' import AboutCredits %}
{% from 'front/components/AboutNovel/AboutNovel.jinja' import AboutNovel %}
{% from 'front/components/AboutPress/AboutPress.jinja' import AboutPress %}
{% from 'front/components/AboutVideo/AboutVideo.jinja' import AboutVideo %}
{% from 'front/components/CommonVideoBackground/CommonVideoBackground.jinja' import CommonVideoBackground %}
{% from 'front/components/CommonVideoPopup/CommonVideoPopup.jinja' import CommonVideoPopup %}

{% block title %} About {% endblock %}

{% block social %}
    <meta name="description" content=""/>
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="{{ static('img/share/share-about.jpg') }}"/>
    <meta property="og:image:width" content="1440"/>
    <meta property="og:image:height" content="640"/>
    <meta property="og:url" content="{{ request.build_absolute_uri() }}">
    <meta property="og:title" content=""/>
    <meta property="og:description" content=""/>
{% endblock %}

{% block content_class %}AboutPage{% endblock %}

{% block content %}
    <div class="AboutSection PageSection">
        <div class="AboutSection-wrapper NeedFixOnPopup">
            <div class="HorizontalPage">
                <div class="AboutSection-inner">
                    {{ AboutIntro() }}
                    {{ AboutCredits(about) }}
                    {{ AboutNovel() }}
                    {{ AboutPress() }}
                </div>
                {{ AboutVideo() }}
                <div class="AboutSection-end"></div>
            </div>
            {{ CommonVideoBackground(about) }}
            {{ CommonVideoPopup() }}
        </div>
        <div class="Section-content">
            {% block section_content %}{% endblock %}
        </div>
    </div>
{% endblock %}